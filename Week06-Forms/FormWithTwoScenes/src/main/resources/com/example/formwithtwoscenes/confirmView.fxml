<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.formwithtwoscenes.ConfirmController"
      spacing="12">
    <padding>
        <Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/>
    </padding>
    <children>
        <Label text="Confirmation" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Label fx:id="summaryLabel" wrapText="true"
               style="-fx-font-family: 'Consolas','Menlo','Monospaced'; -fx-font-size: 13px;"/>
        <Button text="Back" onAction="#handleBack">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </Button>
    </children>
</VBox>


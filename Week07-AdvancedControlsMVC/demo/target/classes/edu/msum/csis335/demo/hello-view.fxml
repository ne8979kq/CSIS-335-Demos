<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.msum.csis335.demo.HelloController">

    <top>
        <HBox spacing="8" style="-fx-padding:10">
            <TextField fx:id="titleField" promptText="Title" HBox.hgrow="ALWAYS"/>
            <TextField fx:id="urlField"   promptText="URL (http... or leave blank)" HBox.hgrow="ALWAYS"/>
            <Button text="Add" onAction="#onAdd"/>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.33">
            <items>
                <VBox spacing="8" style="-fx-padding:10">
                    <Label text="Items" style="-fx-font-weight:bold"/>
                    <ListView fx:id="listView" VBox.vgrow="ALWAYS"/>
                </VBox>

                <VBox spacing="8" style="-fx-padding:10">
                    <Label text="Preview" style="-fx-font-weight:bold"/>
                    <WebView fx:id="webView" VBox.vgrow="ALWAYS"/>
                    <Label fx:id="summaryLabel" style="-fx-font-style:italic"/>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>
